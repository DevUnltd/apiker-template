{
  "compilerOptions": {
    "noImplicitAny": false,
    "outDir": "dist/types",
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "scripts/shim.mjs"],
  "exclude": ["src/**/tests"],
}
